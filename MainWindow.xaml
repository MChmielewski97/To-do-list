<Window x:Class="WpfCrudApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lista zadań"
        Height="450"
        Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Lista zadań -->
        <ListBox x:Name="TasksList"
                 DisplayMemberPath="Title"
                 SelectionChanged="TasksList_SelectionChanged"/>

        <!-- Formularz -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Tytuł"/>
            <TextBox x:Name="TitleBox"/>

            <TextBlock Text="Opis" Margin="0,5,0,0"/>
            <TextBox x:Name="DescriptionBox"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"/>

            <TextBlock Text="Termin" Margin="0,5,0,0"/>
            <DatePicker x:Name="DueDatePicker"/>

            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button Content="Dodaj" Click="Add_Click" Width="80"/>
                <Button Content="Edytuj" Click="Edit_Click" Width="80" Margin="5,0"/>
                <Button Content="Usuń" Click="Delete_Click" Width="80"/>
            </StackPanel>

            <TextBlock Text="Szukaj" Margin="0,10,0,0"/>
            <TextBox x:Name="SearchBox"
                     TextChanged="SearchBox_TextChanged"/>
        </StackPanel>
    </Grid>
</Window>
